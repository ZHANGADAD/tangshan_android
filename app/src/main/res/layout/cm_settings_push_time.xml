<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        layout="@layout/common_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@drawable/commonbg"
        android:orientation="vertical"
        android:padding="@dimen/sz_10" >

        <TextView
            android:id="@+id/ddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sz_20"
            android:layout_marginTop="@dimen/sz_12"
            android:text="上午"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sz_16" />

        <TimePicker
            android:id="@+id/leftTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ddd"
            android:layout_below="@+id/ddd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/sz_10" />

        <View
            android:id="@+id/dasd"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/leftTimer"
            android:layout_marginBottom="@dimen/sz_10"
            android:layout_marginTop="@dimen/sz_10"
            android:background="#ddd" />

        <TextView
            android:id="@+id/nnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dasd"
            android:layout_marginLeft="@dimen/sz_20"
            android:layout_marginTop="@dimen/sz_23"
            android:text="下午"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sz_16" />

        <TimePicker
            android:id="@+id/rightTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nnn"
            android:layout_below="@+id/nnn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/sz_10" />
    </RelativeLayout>

</RelativeLayout>