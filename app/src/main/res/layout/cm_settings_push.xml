<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@drawable/commonbg"
        android:orientation="vertical"
        android:padding="@dimen/sz_10" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/sz_8"
            android:paddingTop="@dimen/sz_8" >

            <TextView
                android:id="@+id/adasf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="推送通知"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sz_18" />

            <com.zcw.togglebutton.ToggleButton
                android:id="@+id/pushToggle"
                android:layout_width="50dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/adasf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adasf"
                android:layout_marginTop="@dimen/sz_5"
                android:singleLine="false"
                android:text="关闭后,您将不再收到任何推送通知,有可能因此漏掉重要的天气通知"
                android:textColor="#99ffffff"
                android:textSize="@dimen/sz_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/dividercolor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/sz_8"
            android:paddingTop="@dimen/sz_8" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="气象灾害预警"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sz_16" />

            <com.zcw.togglebutton.ToggleButton
                android:id="@+id/qixiangToggle"
                android:layout_width="50dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/dividercolor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/sz_8"
            android:paddingTop="@dimen/sz_8" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="天气预报"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sz_16" />

            <com.zcw.togglebutton.ToggleButton
                android:id="@+id/tianqiToggle"
                android:layout_width="50dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/dividercolor" />

        <RelativeLayout
            android:id="@+id/llTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/sz_8"
            android:paddingTop="@dimen/sz_8" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="推送时间"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sz_16" />

            <ImageView
                android:id="@+id/ivs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/sz_10"
                android:background="@drawable/backnext" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ivs"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sz_16" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>