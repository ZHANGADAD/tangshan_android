<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/addbg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/sz_5"
            android:singleLine="true"
            android:text="搜索城市／景点"
            android:textColor="#9a8e8e93" />

        <Button
            android:id="@+id/btSearch"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btBack"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/sz_20"
        android:background="#eceeef"
        android:padding="@dimen/sz_8" >

        <TextView
            android:id="@+id/addasf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="热门城市"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sz_16" />

        <GridView
            android:id="@+id/gvGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btMore"
            android:layout_below="@+id/addasf"
            android:horizontalSpacing="1dip"
            android:numColumns="4"
            android:verticalSpacing="1dip" />

        <Button
            android:id="@+id/btMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/sz_10"
            android:layout_marginRight="@dimen/sz_10"
            android:background="@android:color/white"
            android:padding="@dimen/sz_5"
            android:text="更多城市"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sz_16" />
    </RelativeLayout>

</LinearLayout>