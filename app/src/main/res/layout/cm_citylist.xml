<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btBack"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sz_15"
            android:background="@drawable/blubak" />

        <Button
            android:id="@+id/btBaocun"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btTianjia"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/ivImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sz_5"
            android:layout_toLeftOf="@+id/btTianjia"
            android:background="@drawable/edit" />

        <ImageView
            android:id="@+id/ivImageViewDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sz_5"
            android:layout_toLeftOf="@+id/btTianjia"
            android:background="@drawable/save"
            android:visibility="gone" />

        <Button
            android:id="@+id/btTianjia"
            android:layout_width="80dip"
            android:layout_height="60dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sz_15"
            android:background="@drawable/addd" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvList"
        style="@style/listviewstyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>